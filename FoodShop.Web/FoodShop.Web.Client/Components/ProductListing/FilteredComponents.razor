@using FoodShop.Web.Client.Abstractions.Services
@using FoodShop.Web.ViewModels.Products
@using MudBlazor

  

                <MudGrid Spacing="3" Justify="Justify.FlexStart">
                    @if(Products != null)
                    @foreach(var product in Products)
                    {
                        
                    <MudItem>

                        <MudCarousel Style="height:200px;" ShowArrows="false" ShowBullets="false" EnableSwipeGesture="true" AutoCycle="true" TData="object">
                            <MudCarouselItem Transition="Transition.Fade">
                                    <MudImage Fluid="true" Src="@product.Image" Alt="product" Class="rounded-lg"/>
                            </MudCarouselItem>
                            <MudCarouselItem Transition="Transition.Fade">
                                    <MudImage Fluid="true" Src="img/product-listing/p41.jpg" Alt="product" Class="rounded-lg"/>
                            </MudCarouselItem>
                        </MudCarousel>

                                <MudItem class="p-3">
                                    <h4 class="text-center p-item-name"><a href="product-detail.html"> @product.ProductName </a></h4>
                                    <p class="text-center p-item-price">$@product.Price</p>
                                </MudItem>
                       </MudItem>
                
                    }

                </MudGrid>



@code {

    [Parameter]
    public List<ProductItemViewModel> Products { get; set; }

    [Parameter]
    public EventCallback<List<ProductItemViewModel>> ProductsChanged { get; set; }

}
